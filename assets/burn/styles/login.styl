

#login-page
    height: 100%
    min-height: 100%
    width: 100%
    background-image: url('../images/login-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    text-align: center
    display: table

    img
        display: block
        margin: 0 auto 30px

    #login-wrapper
        width: 90%
        max-width: 250px
        margin: 0 auto
        height: 100%
        min-height: 100%
        // padding-top: 85px
        box-sizing: border-box
        display: table-cell
        vertical-align: middle

        span.error
            padding-top:0


        @media(max-width: 767px)
            padding-top: 0

        p.welcome span
            font-family: BentonSansComp-Light
            font-size: 17px
            line-height: 20px
            color: white
            letter-spacing: 0.01em
            display: block

            &:last-child
                margin-bottom: 7.5px

        .errors
            height:30px
            padding-bottom:7.5px

        #login-form
            margin-bottom: 45px
            box-sizing: border-box
            width: 90%
            max-width: 250px
            margin: 0 auto 45px

            input
                width: 100%
                height: 50px
                border: 1px solid #454444
                color: white
                background-color: transparent
                margin-bottom: 10px
                text-align: center
                font-family: BentonSansComp-Light
                font-size: 18px
                box-sizing: border-box
                border-radius: 0
                outline: none

