

section#home
    width: 100%
    background: url('../images/Phase2/red-stripe-bg.png') center bottom repeat-x
    overflow: hidden
    height: 576px

    @media(max-width:680px)
        height: 490px
        background-size: contain

    #home-content-video
        text-transform: uppercase
        width: 100%
        //max-width: 1200px
        margin: 0 auto
        box-sizing: border-box
        position: relative
        background: black
        height:576px

        @media(max-width:680px)
            height: 490px

    #home-content
        text-transform: uppercase
        width: 100%
        //max-width: 1200px
        margin: 0 auto
        box-sizing: border-box
        position: relative



        img#tennis-player-bg
            position: absolute
            top: -48px
            right: -30px
            z-index: 4
            width: auto

            @media(max-width:920px)
                width: 520px
                top: -20px

            @media(max-width:820px)
                width: 470px
                top: 0px

            @media(max-width:750px)
                width: 420px
                top: 20px

            @media(max-width:700px)
                width: 370px
                top: 40px

        p
            font-family: BentonSansExtraComp-Bold
            color: black
            z-index: 5
            position: relative

            &.medium
                font-size: 52px
                line-height: 65px

            &.large
                font-size: 131px
                line-height: 105px
                margin-bottom: 15px
                letter-spacing: -0.01em

            &.sub-text
                color: white
                font-family: BentonSansExtraComp-Light
                font-size: 28px
                margin-bottom: 25px
                max-width: 300px

            &.available-soon
                color: white
                font-family: BentonSansExtraComp-Light
                font-size: 20px
                margin-bottom: 3px

                @media(max-width:680px)
                    display: none

        a
            font-family: BentonSansComp-Medium
            color: white
            font-size: 16px
            line-height: 20px
            background-color: black
            padding: 15px 0px 13px
            width: 200px
            text-align: center
            clear: both
            display: inline-block
            text-decoration: none
            z-index: 5
            position: relative
            transition: background-color .35s ease-in-out
            display: inline-block

            &:hover
                background-color: #999

            &#mobile-pre-order
                display: none

            @media(max-width: 680px)
                display: none
                margin: 0 auto

                &#mobile-pre-order
                    display: block
                    width: 230px

        img
            display: block
            margin: 70px 0 0 35px

            &#scroll-to-learn
                z-index: 10
                position: relative
                cursor: pointer


    @media(max-width:680px)
        //height: 450px

        #home-content
            padding: 0
            width: 100%
            box-sizing: border-box

            img#tennis-player-bg
                margin: 0 auto
                max-width: 240px
                left: 0
                right: 0
                top: 100px

            p
                font-family: BentonSansExtraComp-Bold
                color: black
                z-index: 5
                position: absolute

                &.medium
                    font-size: 20px
                    line-height: 33px
                    top: 20px
                    right: 70px

                &.large
                    font-size: 45px
                    line-height: 55px
                    margin-bottom: 15px
                    top: 40px
                    right: 29px


                &.sub-text
                    color:white
                    font-family:BentonSansExtraComp
                    font-size:14px
                    margin-bottom:25px
                    max-width:120px
                    top: 88px
                    right: 30px

            a
                font-size: 16px
                line-height: 20px
                background-color: black
                padding: 15px 20px
                z-index: 5
                position: absolute
                top: 375px
                text-align: center
                left: 20px
                right: 20px

            img#scroll-to-learn
                display: none


