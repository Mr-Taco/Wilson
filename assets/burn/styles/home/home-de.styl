.de-de
    section#home
        height: auto

        #home-content
            padding: 178px 0 85px 65px

            img#tennis-player-bg
                position: absolute
                top: -48px
                right: -30px
                z-index: 4
                width: auto

                @media(max-width:985px)
                    width: 520px
                    top: -20px

                @media(max-width:885px)
                    width: 470px
                    top: 0px

                @media(max-width:805px)
                    width: 420px
                    top: 20px

                @media(max-width:755px)
                    width: 370px
                    top: 40px

            p
                &.sub-text
                    max-width: 325px

            a
                visibility:hidden


        @media(max-width:680px)
            height: 450px

            #home-content

                img#tennis-player-bg
                    margin: 0 auto
                    max-width: 240px
                    left: 0
                    right: 0
                    top: 100px

                p
                    &.medium
                        right: 78px


                    &.sub-text
                        color:white
                        font-family:BentonSansExtraComp
                        font-size:14px
                        margin-bottom:25px
                        max-width:120px
                        top: 88px
                        right: 30px

                img#scroll-to-learn
                    display: none




