.jp-jp
    section#team-burn
        .responses
            height: 182px

            @media(max-width: 680px)
                height: 0

    p#team-burn-legal
        font-family: BentonSansComp
        font-size: 12px
        color: #c2c2c2
        position: absolute
        bottom: 20px
        left: 25px
        z-index: 5000
        letter-spacing: 0em

        @media(max-width:680px)
            display: none

        @media(min-width: 681px)
            max-width: 280px

        @media(min-width: 760px)
            max-width: 365px

        @media(min-width: 830px)
            max-width: 420px

        @media(min-width: 950px)
            max-width: 520px

