

section#specs
    width: 100%
    background: url('../images/Phase2/black-stripe-bg.png') repeat
    height: 1540px
    position: relative
    overflow:hidden
    transition: height .65s ease-in-out

    #specs-content
        width: 100%
        max-width: 1024px
        margin: 0 auto

        #specs-headline
            width: 90%
            max-width: 515px
            margin: 0 auto
            padding: 50px 0 0 0
            text-align: center

            .top, .bottom
                padding: 15px 20px

            .top
                border-bottom: 1px solid gray

                @media(max-width:680px)
                    img
                        width: 30px

            .bottom
                font-family: BentonSansExtraComp-Bold
                font-size: 66px
                line-height: 58px
                letter-spacing: 0.001em
                color: white
                text-transform: uppercase

                em
                    color: orange

        #specs-btn-wrapper
            width: 100%
            margin: 0 auto
            text-align: center
            position: relative
            top: 1170px

            a#see-more-specs
                font-family: BentonSansComp-Medium
                font-size: 18px
                color: white
                background-color: orange
                width: 285px
                padding: 18px 20px 15px
                text-align: center
                text-transform: uppercase
                text-decoration: none
                transform: matrix(1, 0, 0, 1, 0, 0);
                transition: opacity .35s ease-in-out .5s, background-color .35s ease-in-out .5s, transform .35s ease-in-out .5s

                &::before
                    content: "+"
                    color: black
                    position: relative
                    top: 3px
                    margin-right: 10px
                    font-size: 32px
                    font-family: BentonSansComp

                &:hover
                    background-color: #999999

                &.showing
                    opacity: 0
                    transform: matrix(0.5, 0, 0, 0.5, 0, 0);
                    transition: opacity .35s ease-in-out, background-color .35s ease-in-out, transform .35s ease-in-out

    #racket-fallback
        position: absolute
        top: 300px
        left: 0
        right: 0
        visibility: hidden

        #desktop-racket-fallback
            max-width: 1024px
            overflow: visible !important

            img
                width: 100%
                display: block
                
                &.mobile
                    display: none

        .pagination
            position: absolute
            top: 930px
            left: 0
            right: 0
            text-align: center

            .swiper-pagination-switch
                width: 15px
                height: 15px
                border-radius: 50px
                background-color: white
                margin: 0 10px
                display: inline-block

            .swiper-active-switch
                background-color: orange

        .swipe-for-more
            top: 955px
            
            span.desktop
                display: inline
                
            span.mobile
                display: none
                


        @media(max-width:680px)
            top: 220px
            
            #desktop-racket-fallback
                .swiper-slide
                    text-align: center
                
                img
                    max-width: 330px
                    margin: 0 auto
                    display: none
                    
                    &.mobile
                        display: block
                    
            .swipe-for-more
                span.desktop
                    display: none
                    
                span.mobile
                    display: inline
                        
            .pagination
                top: 400px
                
            .swipe-for-more
                top: 425px
                
                &#desktop-swipe-for-more
                    display: none
                    
                &#mobile-swipe-for-more
                    display: block



    #mobile-racket
        width: 100%
        display: none
        position: absolute
        top: 250px

        #mobile-racket-container
            display: none

        .swiper-slide
            width: 100%
            text-align: center

            img
                width: 100%
                max-width: 300px
                margin: 0 auto

        .pagination
            position: absolute
            top: 430px
            left: 0
            right: 0
            text-align: center

            .swiper-pagination-switch
                width: 15px
                height: 15px
                border-radius: 50px
                background-color: white
                margin: 0 10px
                display: inline-block

            .swiper-active-switch
                background-color: orange

        @media(max-width:680px)
            display: block


    @media(max-width:680px)
        height: 1270px

        #specs-content
            #specs-headline
                .bottom
                    padding: 15px 5px
                    font-size: 38px
                    line-height: 38px

            #specs-btn-wrapper
                a#see-more-specs
                    display: none


    #specs-table-wrapper
        width: 100%
        max-width: 1024px
        margin: 0 auto
        position: absolute
        top: 1540px
        left: 0
        right: 0

        @media(max-width:680px)
            top: 775px

        a#close-table
            width: 42px
            height: 42px
            float: right
            background: url('../images/Phase2/specs-table-close-btn.png')

            @media(max-width:680px)
                display: none

        table#specs-table
            width: 95%
            margin: 0 auto

            tr
                width: 100%

                &.ages:hover, &.headsize:hover, &.weight:hover, &.balance:hover, &.pattern:hover
                    &:hover
                        background: darkgray

                &.names
                    p
                        font-family: BentonSansComp
                        font-size: 28px
                        color: white

                        em
                            color: gray

                        &.orange
                            font-family: BentonSansComp-Bold
                            font-size: 36px
                            color: orange
                            text-transform: uppercase

                    @media(max-width:999px)
                        p
                            font-size: 24px

                            &.orange
                                font-size: 32px

                &.specs
                    p
                        font-family: BentonSansComp-Book
                        font-size: 18px
                        color: white
                        display: list-item
                        list-style-image: url('../images/Phase2/white-cross.png')
                        margin-left: 15px

                        // &::before
                        //     content: "+"
                        //     margin-right: 4px

                    @media(max-width:999px)
                        p
                            font-family: BentonSansComp-Book
                            font-size: 14px

                &.ages
                    text-transform: none

                &.pre-order
                    &.gb, &.es, &.de, &.fr, &.it, &.ch, &.jap
                        display: none

                    td
                        text-align: center

                td, th
                    font-family: BentonSansComp
                    font-size: 22px
                    color: white
                    border-left: 2px dotted gray
                    padding: 15px
                    width: 16.666667%
                    box-sizing: border-box

                    &:first-child
                        font-family: BentonSansComp-Medium
                        font-size: 22px
                        color: gray
                        text-transform: uppercase
                        border-left: none

                    a.orange-btn
                        font-family: BentonSansComp
                        font-size: 13px
                        color: white
                        padding: 10px 20px
                        background: orange
                        text-transform: uppercase
                        text-decoration: none
                        transition: background .35s ease-in-out

                        &:hover
                            background: #999999

                    @media(max-width:999px)
                        font-size: 19px

                        &:first-child
                            font-size: 19px

                        a.orange-btn
                            font-size: 11px

            @media(max-width:680px)
                display: none

        p#mobile-specs-blurb
            font-family: BentonSansExtraComp
            font-size: 21px
            color: #aeaeae
            text-transform: uppercase
            display: none
            padding-left: 6%

            @media(max-width:680px)
                display: block

        #mobile-specs-gallery
            height: 400px
            display: none

            @media(max-width:680px)
                display: block

            #mobile-specs-container
                height: 400px !important
                display: none !important
                    
                @media(max-width:680px)
                    display: block !important
                    height: 400px !important

            .racket-container
                height: auto
                width: 100%
                padding: 10px 1.5%
                box-sizing: border-box
                overflow: hidden

                .racket-name
                    font-family: BentonSansExtraComp
                    font-size: 36px
                    text-transform: uppercase
                    color: white
                    margin-bottom: 10px

                    em
                        color: orange

                        &:nth-child(even)
                            color: lightgray

                .trait
                    display: list-item
                    list-style-image: url('../images/Phase2/white-cross.png')
                    color: white
                    font-family: BentonSansComp
                    font-size: 16px
                    margin: 0 0 0 7%

                .stat-wrapper
                    width: 50%
                    display: inline-block
                    box-sizing: border-box
                    margin: 0
                    margin-top: 20px

                .stat-title
                    font-family: BentonSansComp-Bold
                    font-size: 16px
                    line-height: 20px
                    color: lightgray
                    text-transform: uppercase

                .stat
                    font-family: BentonSansComp
                    font-size: 17px
                    color: white
                    text-transform: uppercase

                .pre-order
                    display: block
                    font-family: BentonSansComp
                    color: white
                    text-transform: uppercase
                    background-color: orange
                    width: 90%
                    margin: 30px auto
                    padding: 20px 0
                    text-align: center
                    text-decoration: none
                    
                .orange-btn
                    width: 90%
                    margin: 0 auto
                    color: white
                    font-family: BentonSansComp
                    font-size: 18px
                    background-color: orange
                    display: block
                    text-align: center
                    padding: 10px 0
                    margin-top: 20px
                    text-transform: uppercase
                    
                    em
                        color: #616161

            .pagination
                position: absolute
                top: 390px
                left: 0
                right: 0
                text-align: center

                .swiper-pagination-switch
                    width: 15px
                    height: 15px
                    border-radius: 50px
                    background-color: white
                    margin: 0 10px
                    display: inline-block

                .swiper-active-switch
                    background-color: orange
                    
            .swipe-for-more
                top: 415px
            
                span.desktop
                    display: inline
                    
                span.mobile
                    display: none
                    
                @media(max-width:680px)
                    span.desktop
                        display: none
                        
                    span.mobile
                        display: inline


