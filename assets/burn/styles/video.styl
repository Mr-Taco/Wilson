
iframe#marquee-fallback
    opacity: 0
    z-index: -10
    position: absolute
    top: 0

#hero-overlay
    position:absolute
    top:0
    left:0
    right:0
    bottom:0
    background:rgba(0,0,0,0)
    height: 576px
    background: url('../images/Phase2/video-bg.jpg') center center no-repeat
    background-size: cover
    background-position: center top

    @media(max-width:680px)
        height: 490px

    #play-btn-wrapper
        width:46px
        height:46px
        position: absolute
        top: calc(50% - 70px)
        left: calc(50% - 23px)

        img#play-btn, img#play-btn-hover
            width:46px
            height:auto
            margin:0 auto
            /*padding-bottom:60px*/
            cursor:pointer
            position: absolute
            /*top: calc(50% - 70px)*/
            /*left: calc(50% - 23px)*/
            z-index: 5
            opacity: 1
            transition: opacity .35s ease-in-out

        img#play-btn-hover
            opacity: 0


        &:hover
            img#play-btn
                opacity: 0 !important

            img#play-btn-hover
                opacity: 1 !important


    img#play-btn-hover
        opacity: 0
        z-index: -5


    #watch-video
        font-family: BentonSansComp
        font-size: 12px
        letter-spacing: 0.025em
        color: white
        position: absolute
        top: calc(50% - 10px)
        left: calc(50% - 31px)
        width: 64px
        text-align: center


    .overlay-container
        position:absolute
        bottom: 65px
        left: 95px
        text-align:left
        width:350px

        .video-title
            padding-bottom:0px
            span
                font-family:BentonSansExtraComp-Bold
                color:#ffffff
                font-size:72px
                text-transform: uppercase

        .video-caption
            padding-bottom:10px
            p
                font-family:BentonSansComp
                color:white
                font-size:22px
                text-transform: uppercase

        button
            margin-bottom: 20px
            padding: 15px 60px
            background: black
            color: white
            font-family: BentonSansComp-Medium
            font-size: 13px
            text-transform: uppercase
            border: none
            outline: none
            //display: block
            transition: background-color .35s ease-in-out

            &:hover
                background-color:#999

        img#scroll-to-learn
            display: block
            margin: 0 auto


video#hero-video
    width:100%
    height:100%


@media(max-width:680px)

    #hero-overlay

        #play-btn-wrapper
            top: 135px

        #watch-video
            top: 190px

        .overlay-container
            width: 270px
            top: 225px
            left: calc(50% - 135px)
            text-align: center

            .video-title
                span
                    font-size:50px
                    text-transform: uppercase
                    font-family: BentonSansExtraComp-Bold
                    letter-spacing: 0.01em

            .video-caption
                padding-bottom:10px
                p
                    font-family:BentonSansComp
                    color:black
                    font-size:15px
                    text-transform: uppercase
                    width: 235px
                    margin: 0 auto

            button
                padding: 15px 0px
                width: 85%
                margin: 0 auto
                background: red
                font-family: BentonSansComp-Medium
                font-size: 18px


@media(max-width:480px)
    #hero-overlay
        .overlay-container
            img#play-btn
                padding-bottom:10px

            .video-title
                padding-bottom:5px



            .video-caption
                padding-bottom:10px
