
section#technology
    width: 100%
    height: 765px
    background: url('../images/Phase2/red-stripe-thin-bg.jpg')

    #technology-content
        width: 100%
        height: 100%
        max-width: 1024px
        margin: 0 auto
        background: url('../images/Phase2/white-w-bg.png') 0% 0% no-repeat
        text-align: center

        #technology-headline
            width: 90%
            max-width: 615px
            margin: 0 auto
            padding-top: 90px
            text-align: center

            p
                font-family: BentonSansComp-Bold
                font-size: 46px
                // line-height: 50px
                letter-spacing: -0.001em
                color: white
                text-transform: uppercase

                &.subtext
                    margin-top: 20px
                    font-family: BentonSansComp
                    font-size: 20px
                    line-height: 23px
                    color: black
                    text-transform: none

        img#tennis-court
            min-width: 500px
            max-width: 1000px
            margin: 20px auto 0
