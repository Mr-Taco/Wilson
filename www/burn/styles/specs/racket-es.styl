.es-es
    @keyframes pulsate {
        0% {
            opacity: 1
        }
        50% {
            opacity: .6
        }
        100% {
            opacity: 1
        }
    }


    #racket

        position:absolute
        width:100%
        height:(980+294)px
        top:0


        @media(max-width:680px)
            display: none

        #loader-container
            position:absolute
            width:150px
            height:150px
            top:42%
            left:50%
            transform:translate(-50%,-50%)
            user-select:none
            pointer-events:none

            #specs-cta
                opacity:0
                visibility:hidden
                position:absolute


            #specs-loader
                position:absolute

            svg.loader-spinner
                g
                    position:absolute
                    transform:translate(72px,72px)

                g.outer
                    circle
                        stroke-dasharray:12
                        opacity:.5

                g.load-meter
                    circle
                        opacity:.7

            .progress
                position:absolute
                top:48%
                left:48%
                transform:translate(-50%,-50%)
                text-align:center

                span
                    display:block
                    font-family:BentonSansRegular
                    user-select:none

                    &.loading
                        font-family:BentonSansComp-Bold
                        color:#ffffff
                        font-size:10px

                    &.amount
                        font-family:BentonSansRegular
                        color:#ffffff
                        font-size:20px
                        padding-top:0px

            .loading-copy
                position:absolute
                left: 50%
                width: 760px
                transform: translateX(-50%)
                top: 180px
                text-align:center
                animation: pulsate 2s
                animation-iteration-count:infinite
                span
                    font-family: BentonSansComp-Bold
                    font-size: 28px
                    color:#ff6c00






        .racket-specs-content
            cursor:all-scroll
            visibility:hidden
            opacity:0
            position:relative
            width:100%
            height:100%


    .gl-container , .svg-container
        cursor:default
        position:absolute
        top:0
        left:0
        right:0
        bottom:0
        width:100%
        height:100%






    .svg-container-over , .svg-container-under
        svg
            width:100%
            height:100%
            top:0
            left:0
            bottom:0
            right:0
            position:absolute



            g.hotspot
                cursor:pointer

                text
                    font-family: BentonSansRegular


                g.plus-sign
                    position:absolute
                    g
                        position:absolute
                        rect
                            position:absolute


                g.number
                    position:absolute
                    //transform:translate(0px,-8px)


                g.yellow-stroke, g.white-stroke
                    circle
                        opacity:.75
                        stroke-dasharray: 100%
                        stroke-dashoffset: 100%

                /*g.yellow-stroke g
                    transform:translate(10px,10px)

                g.white-stroke g
                    transform:translate(16px,16px)*/

            g.content-hotspot
                cursor:pointer
                g.plus-sign
                    position:absolute
                    opacity:.75
                    transform:translate(-4px,-4px)
                    g
                        position:absolute
                        .h
                            transform:translate(0px,3px)
                        .v
                            transform:translate(3px,0px)


                g.yellow-stroke circle, g.white-stroke circle
                    opacity:.75

            path.hotspot-path
                stroke:#4b4b4b
                stroke-width:2
                opacity:0
                stroke-dasharray: 0,1000

                &.white
                    stroke:#ffffff

            circle.clickable
                cursor:pointer





    .hotspot-content-container
        position:absolute
        top:0
        left:0
        width:100%

        .contentRect
            position:absolute
            border:1px solid red

        .hotspot-content
            position:absolute
            transform:translate3d(0px,0px,0px)
            width:215px
            
            &:nth-child(1)
                width: 270px
                
                p em
                    display: block

            &:nth-child(3)
                width: 240px

            &:nth-child(4)
                width: 255px
                
            &:nth-child(5)
                width: 182px !important

            .anchor
                position:absolute
                top:-20px
                left:-20px

            &#content-parallel-drilling
                .anchor
                    top:-30px
                    left:75px


            p
                font-family:BentonSansRegular
                color:#ffffff
                font-size:15px
                letter-spacing:.5px
                line-height:17px

                span
                    position:relative

            em
                font-family:BentonSansRegular
                color:#262626

    .ie
        #racket
            #loader-container
                svg.loader-spinner
                    transform:translate(47%,47%)
