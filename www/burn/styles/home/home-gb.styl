.en-gb

    section#home

        #home-content
            // padding: 138px 0 85px 65px
            
            img#tennis-player-bg
                position: absolute
                top: -48px
                right: -30px
                z-index: 4
                width: auto
                
                @media(max-width:955px)
                    width: 520px
                    top: -20px
                    
                @media(max-width:855px)
                    width: 470px
                    top: 0px
                    
                @media(max-width:775px)
                    width: 420px
                    top: 20px
                    
                @media(max-width:725px)
                    width: 370px
                    top: 40px

            p
                &.sub-text
                    max-width: 305px
                    
            a
                visibility:hidden
                    
            
        @media(max-width:680px)
            #home-content
                
                img#tennis-player-bg
                    margin: 0 auto
                    max-width: 240px
                    left: 0
                    right: 0
                    top: 100px
                    
                p
                    &.medium
                        right: 50px

                    &.large
                        right: 84px


                    &.sub-text
                        color:white
                        font-family:BentonSansExtraComp
                        font-size:14px
                        margin-bottom:25px
                        max-width:120px
                        top: 88px
                        right: 30px
                    
                img#scroll-to-learn
                    display: none
                        



