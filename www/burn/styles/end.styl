
#end-page
    min-height: 100%
    width: 100%
    background-image: url('../images/thank-you-bg.jpg')
    background-position:center
    background-repeat: no-repeat
    background-size: cover
    text-align: center

    #end-wrapper
        width: 90%
        max-width: 550px
        margin: 0 auto
        height: 100%

        p#thank-you
            font-family: BentonSansComp-Light
            font-size: 28px
            line-height: 34px
            color: white
            margin-bottom: 55px
            padding-top: 190px

        p#show
            font-family: BentonSansComp-Light
            font-size: 20px
            line-height: 34px
            color: gray

        span#hash
            font-family: BentonSansComp-Light
            color: white
            font-size: 36px
            line-height: 46px
            text-transform: uppercase

            em
                font-family: BentonSansComp-Bold
                color: orange

        ol#social-btns
            margin-bottom: 50px



            li
                display: inline-block
                padding: 0 7px
                position: relative
                min-width: 50px

                &:hover
                    .white
                        opacity: 0
                    // z-index: -1

                    .red
                        opacity: 1
                    // z-index: 1

                img
                    position: absolute
                    left: 11px
                    transition: opacity .3s ease-in-out

                    &.white
                        opacity: 1
                        // z-index: 1

                    &.red
                        opacity: 0
                        // z-index: -1


                .tooltip
                    height: 63px
                    width: 225px
                    background: url('../images/tooltip-bg.png') center center no-repeat
                    background-size: 100%
                    color: white
                    font-family: Arial
                    font-size: 13px
                    left: -83px
                    top: 40px
                    position: absolute
                    opacity: 0

                    @media screen and (max-width: 480px) and (orientation: portrait)
                        height: 53px
                        width: 190px
                        left: -68px

        img#burn-badge
            margin-bottom: 20px

        p#agent-reporting-blurb
            font-family: Arial
            font-size: 12px
            line-height: 16px
            color: gray
            padding-bottom: 50px

