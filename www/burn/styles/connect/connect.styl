section#connect
    width: 100%
    background: url('../images/Phase2/white-stripe-thin-bg.png') repeat

    #connect-content
        width: 90%
        max-width: 1024px
        height: 100%
        margin: 0 auto
        overflow: hidden
        padding-bottom: 100px
        background-image: url("/burn/images/Phase2/connect-loading-icon.png")
        background-repeat: no-repeat
        background-position: center bottom

        #connect-headline
            width: 100%
            padding: 40px 0 0
            margin-bottom: 20px
            border-bottom: 1px solid gray
            text-align: center
            position: relative

            .logo
                position: absolute
                left: 0
                top: 40px

                img
                    height: 60px

            p
                font-family: BentonSansComp-Bold
                font-size: 31px
                color: #484848
                text-transform: none
                width: 80%
                margin: 0 auto

                &.sub-text
                    font-family: BentonSansComp
                    font-size: 18px
                    margin: 15px auto 30px
                    max-width: 300px

                    em
                        font-family: BentonSansComp-Bold
                        color: orange
                        text-transform: uppercase

                &.mobile
                    display: none

            .social
                position: absolute
                right: 0
                top: 40px

                p
                    font-family: BentonSansComp
                    font-size: 18px
                    color: darkgray
                    text-transform: uppercase

                em
                    color: orange

                ol#social
                    margin: 10px 0 0 12px

                    li
                        display: inline-block
                        margin: 0 5px
                        position: relative

                        img
                            width: 24px
                            transition: opacity .35s ease-in-out

                            &.inactive
                                opacity: 1

                            &.active
                                opacity: 0
                                position: absolute
                                left: 0px

                        &:hover
                            img.inactive
                                opacity: 0

                            img.active
                                opacity: 1

        #connect-masonry-wrapper
            height: 90%
            width: 100%
            max-width: 1024px
            margin: 0 auto

        #connect-masonry
            margin: 0 auto

            @media(min-width:300px)
                width: ($smphonecontainerWidth - ($gutter*2))px

            @media (min-width: 374px)
                width: ($medphonecontainerWidth - ($gutter*2))px

            @media (min-width: 400px)
                width: ($lrgphonecontainerWidth - ($gutter*2))px

            @media(min-width:681px)
                width: ($smcontainerWidth)px

            @media(min-width:770px)
                width: ($containerWidth)px

            @media(min-width:1025px)
                width: ($lrgcontainerWidth)px

        img#connect-load-icon
            width: 52px
            position: absolute
            left: 0
            right: 0
            bottom: 10px
            margin: 0 auto

    @media(max-width:680px)
        #connect-content
            width: 100%

            #connect-headline
                border: none

                .logo
                    position: static

                    img
                        height: 90px
                        margin-bottom: 30px

                p.mobile
                    display: block
                    text-transform: uppercase
                    font-family: BentonSansExtraComp-Bold
                    font-size: 30px

                p.sub-text
                    width: 90%
                    margin: 20px auto 30px
                    font-size: 17px

                .social
                    position: static
                    margin-bottom: 30px

                    ol#social li img
                        width: 40px

            #connect-masonry
                margin: 0 auto

                @media(max-width: 680px)
                    .item
