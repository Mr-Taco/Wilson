.square-post
    position: relative
    // padding:10px
    box-sizing:border-box
    overflow: hidden
    background-size: cover !important
    background-repeat: none
    border: 0px solid orange
    transition: border .35s ease-in-out .35s
    margin:(0)px (0)px

    img
        width: 100%

    .hover-overlay
        height: 110%
        width: 100%
        background: rgba(0,0,0,0.75)
        opacity: 0
        z-index: -5
        pointer-events: none
        box-sizing: content-box
        padding: 10px
        margin: -10px
        display: table
        transition: opacity .35s ease-in-out .35s

        p.caption
            font-family: BentonSansComp
            color: white
            font-size: 18px
            line-height: 21px
            width: 100%
            margin-left: 0%
            padding: 0 10%
            height: 100%
            margin: 0 auto
            display: table-cell
            vertical-align: middle
            text-align: center
            opacity: 0
            transition: opacity .35s ease-in-out 0s
            // transition-delay: 0s

        &::after
            opacity: 1
            position: absolute
            right: 28px
            bottom: 28px
            height: 18px
            width: 10px
            content: "\f045"
            font-family: FontAwesome
            font-size: 26px
            color: white
            opacity: 1
            transition: opacity .35s ease-in-out

    &:hover, &.touch-hover
        border: 5px solid orange
        transition: border .35s ease-in-out 0s

        .hover-overlay
            opacity: 1
            z-index: 50000
            pointer-events: auto


            p.caption
                opacity: 1
                // transition-delay: .35s
                transition: opacity .35s ease-in-out .35s



    &.facebook::before, &.twitter::before, &.instagram::before
        position: absolute
        left: 28px
        bottom: 32px
        height: 18px
        width: 10px
        font-family: FontAwesome
        font-size: 26px
        z-index: 100
        color: white
        content: "\f09a"

    &.facebook::before
        content: "\f09a"

    &.instagram::before
        content: "\f16d"

    &.twitter::before
        content: "\f099"

    &.small
        float: left
        margin-bottom: 0
        background-position: center center

        &.facebook::before, &.twitter::before, &.instagram::before
            left: 15px
            bottom: 20px

        .hover-overlay p.caption
            width: 100%
            margin-left: 0%
            height: 100%
            font-size: 14px

        .hover-overlay::after
            right: 28px
            bottom: 19px

